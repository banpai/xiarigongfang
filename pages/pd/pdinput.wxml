<view class="container">
    <!--input表单 start-->
    <view class="weui-cell weui-cell_input" style="margin-top: 25px;">
        <view class="weui-cell__hd">
            <view class="weui-label">客人数量</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入客人数量" bindinput="usercount" value="{{usercount}}" />
        </view>
    </view>
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">手机号码</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入电话号码" type="number" bindinput="tel" value="{{tel}}" />
        </view>
    </view>
    <!--input表单 end-->

    <!--三种按钮 start-->
    <button class="weui-btn" type="primary" bindtap="savemsg" >保存</button>
    <!--三种按钮 end-->
</view>